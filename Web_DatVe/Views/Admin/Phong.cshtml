@model IEnumerable<Web_DatVe.Models.PHONG>
@{
    var rap = ViewBag.Rap as List<Web_DatVe.Models.RAP>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý phòng chiếu</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<a class="btn btn-danger mb-3" href="/Admin/ThemPhong">+ Thêm phòng</a>

<table class="table table-bordered shadow bg-white">
    <thead class="table-danger">
        <tr>
            <th>Tên phòng</th>
            <th>Rạp</th>
            <th>Số ghế</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.TenPhong</td>
                <td>@rap.First(x => x.MaRap == p.MaRap).TenRap</td>
                <td>@p.SoLuongGhe</td>

                <td>
                    <a class="btn btn-warning btn-sm" href="/Admin/SuaPhong/@p.MaPhong">Sửa</a>
                    <a class="btn btn-outline-danger btn-sm" href="/Admin/XoaPhong/@p.MaPhong">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
