@model IEnumerable<Web_DatVe.Models.PHIM>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý phim</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex gap-2 mb-3">
    <a href="/Admin/ThemPhim" class="btn btn-danger">+ Thêm phim</a>
    <a href="/Admin/TaoSuatMacDinhChoTatCaPhim" class="btn btn-outline-primary"
       onclick="return confirm('Tạo suất chiếu mặc định cho tất cả phim chưa có suất?');">
        Tạo suất mặc định cho tất cả phim
    </a>
</div>

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Tên phim</th>
            <th>Thể loại</th>
            <th>Ngày chiếu</th>
            <th></th>
        </tr>
    </thead>

    <tbody id="tbody-phim"></tbody>
</table>


<script>
    function loadPhim() {
        fetch('/api/phim/getall')
            .then(res => res.json())
            .then(data => {
                const tbody = document.getElementById('tbody-phim');
                tbody.innerHTML = "";

                data.forEach(p => {
                    tbody.innerHTML += `
                        <tr>
                            <td>${p.TenPhim}</td>
                            <td>${p.TheLoai}</td>
                            <td>${p.NgayKhoiChieu ? formatDate(p.NgayKhoiChieu) : "N/A"}</td>
                            <td>
                                <a class="btn btn-sm btn-warning" href="/Admin/SuaPhim/${p.MaPhim}">Sửa</a>
                                <button class="btn btn-sm btn-outline-danger" onclick="deletePhim(${p.MaPhim})">Xóa</button>
                            </td>
                        </tr>
                    `;
                });
            });
    }

    function deletePhim(id) {
        if (!confirm("Bạn chắc chắn muốn xóa phim này?")) return;

        fetch(`/api/phim/delete/${id}`, {
            method: 'DELETE'
        })
            .then(res => {
                if (res.ok) {
                    alert("Đã xóa thành công");
                    loadPhim();
                } else {
                    // Cố gắng đọc nội dung lỗi từ phản hồi (response body)
                    res.text().then(errorText => {
                        // Hiển thị thông báo lỗi chi tiết hơn
                        alert("Xóa thất bại. Lỗi: " + errorText);
                    }).catch(() => {
                        alert("Xóa thất bại. Không đọc được thông báo lỗi.");
                    });
                }
            });
    }

    function formatDate(dateStr) {
        const d = new Date(dateStr);
        return d.toLocaleDateString('vi-VN');
    }

    window.onload = loadPhim;
</script>
