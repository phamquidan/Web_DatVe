@model IEnumerable<Web_DatVe.Models.PHIM>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý phim</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex gap-2 mb-3">
    <a href="/Admin/ThemPhim" class="btn btn-danger">+ Thêm phim</a>
    <a href="/Admin/TaoSuatMacDinhChoTatCaPhim" class="btn btn-outline-primary"
       onclick="return confirm('Tạo suất chiếu mặc định cho tất cả phim chưa có suất?');">
        Tạo suất mặc định cho tất cả phim
    </a>
</div>

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Tên phim</th>
            <th>Thể loại</th>
            <th>Ngày chiếu</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.TenPhim</td>
                <td>@p.TheLoai</td>
                <td>@(p.NgayKhoiChieu.HasValue ? p.NgayKhoiChieu.Value.ToString("dd/MM/yyyy") : "N/A")</td>

                <td>
                    <a class="btn btn-sm btn-warning" href="/Admin/SuaPhim/@p.MaPhim">Sửa</a>
                    <a class="btn btn-sm btn-outline-danger" href="/Admin/XoaPhim/@p.MaPhim">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
