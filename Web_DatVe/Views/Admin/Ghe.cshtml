@model IEnumerable<Web_DatVe.Models.GHE>
@{
    var phong = ViewBag.Phong as List<Web_DatVe.Models.PHONG>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý ghế</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<a href="/Admin/ThemGhe" class="btn btn-danger mb-3">+ Thêm ghế</a>

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Phòng</th>
            <th>Dãy ghế</th>
            <th>Số ghế</th>
            <th>Loại ghế</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@(phong?.FirstOrDefault(x => x.MaPhong == g.MaPhong)?.TenPhong ?? "N/A")</td>
                <td>@g.DayGhe</td>
                <td>@(g.SoGhe.HasValue ? g.SoGhe.Value.ToString() : "N/A")</td>
                <td>@(g.LoaiGhe ?? "Thường")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Admin/SuaGhe/@g.MaGhe">Sửa</a>
                    <a class="btn btn-sm btn-outline-danger" href="/Admin/XoaGhe/@g.MaGhe" 
                       onclick="return confirm('Bạn có chắc muốn xóa ghế này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

