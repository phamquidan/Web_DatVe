@model Web_DatVe.Models.SUATCHIEU

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Sửa suất chiếu</h2>
    <a href="/Admin/SuatChieu" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">
    <input type="hidden" name="MaSuat" value="@Model.MaSuat" />

    <label>Phim</label>
    <select name="MaPhim" class="form-select mb-2" required>
        @foreach (var p in (IEnumerable<Web_DatVe.Models.PHIM>)ViewBag.PhimList)
        {
            <option value="@p.MaPhim" @(p.MaPhim == Model.MaPhim ? "selected" : "")>@p.TenPhim</option>
        }
    </select>

    <label>Phòng</label>
    <select name="MaPhong" class="form-select mb-2" required>
        @foreach (var phong in (IEnumerable<Web_DatVe.Models.PHONG>)ViewBag.PhongList)
        {
            <option value="@phong.MaPhong" @(phong.MaPhong == Model.MaPhong ? "selected" : "")>@phong.TenPhong</option>
        }
    </select>

    <label>Thời gian bắt đầu</label>
    <input type="datetime-local" name="ThoiGianBatDau" class="form-control mb-2"
           value="@Model.ThoiGianBatDau.ToString("yyyy-MM-ddTHH:mm")" required />

    <label>Giá vé</label>
    <input type="number" name="GiaVe" class="form-control mb-3" min="0" step="1000" value="@Model.GiaVe" required />

    <button class="btn btn-danger">Cập nhật</button>
</form>


