@model IEnumerable<Web_DatVe.Models.SUATCHIEU>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý suất chiếu</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Mã suất</th>
            <th>Phim</th>
            <th>Phòng</th>
            <th>Thời gian</th>
            <th>Giá vé</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.MaSuat</td>
                <td>@(s.PHIM?.TenPhim ?? "N/A")</td>
                <td>@(s.PHONG?.TenPhong ?? "N/A")</td>
                <td>@s.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@string.Format("{0:N0}", s.GiaVe) đ</td>
                <td>
                    <a href="/Ghe/ChonGhe/@s.MaSuat" class="btn btn-sm btn-info" target="_blank">Xem ghế</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">Chưa có suất chiếu nào.</div>
}

