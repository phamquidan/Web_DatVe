@model Web_DatVe.Models.PHIM

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Thêm phim</h2>
    <a href="/Admin/Phim" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">

    <label>Tên phim</label>
    <input type="text" class="form-control mb-2" name="TenPhim" required />

    <label>Thể loại</label>
    <input type="text" class="form-control mb-2" name="TheLoai" required />

    <label>Thời lượng (phút)</label>
    <input type="number" class="form-control mb-2" name="ThoiLuong" required />

    <label>Ngày khởi chiếu</label>
    <input type="date" class="form-control mb-2" name="NgayKhoiChieu" />

    <label>Poster (tên file trong thư mục Content/images)</label>
    <input type="text" class="form-control mb-2" name="Poster" />

    <label>Quốc gia</label>
    <input type="text" class="form-control mb-2" name="QuocGia" />

    <label>Trailer (URL YouTube: https://www.youtube.com/watch?v=VIDEO_ID hoặc https://youtu.be/VIDEO_ID)</label>
    <input type="text" class="form-control mb-3" name="Trailer" placeholder="Ví dụ: https://www.youtube.com/watch?v=dQw4w9WgXcQ" />

    <button class="btn btn-danger">Lưu</button>
</form>
