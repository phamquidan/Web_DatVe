@model Web_DatVe.Models.NGUOIDUNG

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Sửa thông tin người dùng</h2>
    <a href="/Admin/NguoiDung" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">
    <input type="hidden" name="MaND" value="@Model.MaND" />
    <input type="hidden" name="MatKhau" value="@Model.MatKhau" />
    <input type="hidden" name="NgayTao" value="@Model.NgayTao" />

    <label>Họ tên</label>
    <input type="text" name="HoTen" class="form-control mb-2" value="@Model.HoTen" required />

    <label>Email</label>
    <input type="email" name="Email" class="form-control mb-2" value="@Model.Email" required />

    <label>Số điện thoại</label>
    <input type="text" name="SoDienThoai" class="form-control mb-2" value="@(Model.SoDienThoai ?? "")" />

    <label>Ngày sinh</label>
    <input type="date" name="NgaySinh" class="form-control mb-2" 
           value="@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "")" />

    <label>Giới tính</label>
    <select name="GioiTinh" class="form-select mb-2">
        <option value="">-- Chọn giới tính --</option>
        <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
        <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
        <option value="Khác" @(Model.GioiTinh == "Khác" ? "selected" : "")>Khác</option>
    </select>

    <label>Địa chỉ</label>
    <input type="text" name="DiaChi" class="form-control mb-2" value="@(Model.DiaChi ?? "")" />

    <label>Vai trò</label>
    <select name="VaiTro" class="form-select mb-3" required>
        <option value="KhachHang" @(Model.VaiTro == "KhachHang" ? "selected" : "")>Khách hàng</option>
        <option value="Admin" @(Model.VaiTro == "Admin" ? "selected" : "")>Admin</option>
        <option value="QuanTri" @(Model.VaiTro == "QuanTri" ? "selected" : "")>Quản trị</option>
    </select>

    <button class="btn btn-danger">Cập nhật</button>
    <a href="/Admin/NguoiDung" class="btn btn-secondary">Hủy</a>
</form>

