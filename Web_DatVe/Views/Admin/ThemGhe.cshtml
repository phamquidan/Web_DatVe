@{
    var phong = ViewBag.Phong as List<Web_DatVe.Models.PHONG>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Thêm ghế</h2>
    <a href="/Admin/Ghe" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">

    <label>Phòng</label>
    <select name="MaPhong" class="form-select mb-2" required>
        <option value="">-- Chọn phòng --</option>
        @foreach (var p in phong)
        {
            <option value="@p.MaPhong">@p.TenPhong</option>
        }
    </select>

    <label>Dãy ghế (ví dụ: A, B, C...)</label>
    <input type="text" name="DayGhe" class="form-control mb-2" maxlength="5" required />

    <label>Số ghế</label>
    <input type="number" name="SoGhe" class="form-control mb-2" min="1" />

    <label>Loại ghế</label>
    <select name="LoaiGhe" class="form-select mb-3">
        <option value="Thường">Thường</option>
        <option value="VIP">VIP</option>
        <option value="Couple">Couple</option>
    </select>

    <button class="btn btn-danger">Lưu</button>
    <a href="/Admin/Ghe" class="btn btn-secondary">Hủy</a>
</form>

