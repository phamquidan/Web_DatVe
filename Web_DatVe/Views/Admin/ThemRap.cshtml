<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Thêm rạp</h2>
    <a href="/Admin/Rap" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">

    <label>Tên rạp</label>
    <input type="text" name="TenRap" class="form-control mb-2" required />

    <label>Địa chỉ</label>
    <input type="text" name="DiaChi" class="form-control mb-3" required />

    <button class="btn btn-danger">Lưu</button>
</form>
