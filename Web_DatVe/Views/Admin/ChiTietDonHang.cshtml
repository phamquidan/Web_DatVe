@model Web_DatVe.Models.DONHANG

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Chi tiết đơn hàng #@Model.MaDH</h2>
    <a href="/Admin/DonHang" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4 mb-4">
    <!-- Thông tin đơn hàng -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Thông tin đơn hàng</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <td class="fw-bold" style="width: 40%;">Mã đơn hàng:</td>
                        <td><strong>#@Model.MaDH</strong></td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Ngày đặt:</td>
                        <td>@(Model.NgayDat.HasValue ? Model.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Tổng tiền:</td>
                        <td><strong class="text-danger fs-5">@string.Format("{0:N0}", Model.TongTien ?? 0) đ</strong></td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Trạng thái:</td>
                        <td>
                            @{
                                string badgeClass = "bg-secondary";
                                if (Model.TrangThai == "Đã thanh toán") { badgeClass = "bg-success"; }
                                else if (Model.TrangThai == "Đã xác nhận") { badgeClass = "bg-info"; }
                                else if (Model.TrangThai == "Chờ xử lý") { badgeClass = "bg-warning"; }
                                else if (Model.TrangThai == "Đã hủy") { badgeClass = "bg-danger"; }
                            }
                            <span class="badge @badgeClass fs-6">@Model.TrangThai</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Phương thức TT:</td>
                        <td>@(Model.PhuongThucThanhToan ?? "N/A")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Thông tin khách hàng -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-person me-2"></i>Thông tin khách hàng</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <td class="fw-bold" style="width: 40%;">Họ tên:</td>
                        <td>@(Model.NGUOIDUNG?.HoTen ?? "N/A")</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Email:</td>
                        <td>@(Model.NGUOIDUNG?.Email ?? "N/A")</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Số điện thoại:</td>
                        <td>@(Model.NGUOIDUNG?.SoDienThoai ?? "N/A")</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">Địa chỉ:</td>
                        <td>@(Model.NGUOIDUNG?.DiaChi ?? "N/A")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cập nhật trạng thái -->
<div class="card mb-4">
    <div class="card-header bg-warning">
        <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Cập nhật trạng thái</h5>
    </div>
    <div class="card-body">
        <form method="post" action="/Admin/CapNhatTrangThai/@Model.MaDH" class="d-flex gap-3 align-items-end">
            <div class="flex-grow-1">
                <label class="form-label">Trạng thái mới</label>
                <select name="trangThai" class="form-select" required>
                    <option value="Chờ xử lý" @(Model.TrangThai == "Chờ xử lý" ? "selected" : "")>Chờ xử lý</option>
                    <option value="Đã xác nhận" @(Model.TrangThai == "Đã xác nhận" ? "selected" : "")>Đã xác nhận</option>
                    <option value="Đã thanh toán" @(Model.TrangThai == "Đã thanh toán" ? "selected" : "")>Đã thanh toán</option>
                    <option value="Đã hủy" @(Model.TrangThai == "Đã hủy" ? "selected" : "")>Đã hủy</option>
                </select>
            </div>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-check-circle me-2"></i>Cập nhật
            </button>
        </form>
    </div>
</div>

<!-- Danh sách vé -->
<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-ticket-perforated me-2"></i>Danh sách vé (@Model.VEs.Count vé)</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Phim</th>
                        <th>Rạp</th>
                        <th>Phòng</th>
                        <th>Thời gian</th>
                        <th>Ghế</th>
                        <th>Giá vé</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ve in Model.VEs)
                    {
                        <tr>
                            <td><strong>@(ve.SUATCHIEU?.PHIM?.TenPhim ?? "N/A")</strong></td>
                            <td>@(ve.SUATCHIEU?.PHONG?.RAP?.TenRap ?? "N/A")</td>
                            <td>@(ve.SUATCHIEU?.PHONG?.TenPhong ?? "N/A")</td>
                            <td>@(ve.SUATCHIEU?.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                            <td>
                                <span class="badge bg-primary">
                                    @if (ve.GHE != null)
                                    {
                                        @($"{ve.GHE.DayGhe ?? ""}{ve.GHE.SoGhe?.ToString() ?? ""}")
                                        if (ve.GHE.LoaiGhe != null && ve.GHE.LoaiGhe != "Thường")
                                        {
                                            <span class="ms-1">(@ve.GHE.LoaiGhe)</span>
                                        }
                                    }
                                    else
                                    {
                                        <text>N/A</text>
                                    }
                                </span>
                            </td>
                            <td><strong class="text-danger">@string.Format("{0:N0}", ve.Gia) đ</strong></td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="5" class="text-end fw-bold">Tổng cộng:</td>
                        <td><strong class="text-danger fs-5">@string.Format("{0:N0}", Model.TongTien ?? 0) đ</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

