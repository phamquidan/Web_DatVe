@{
    var rap = ViewBag.Rap as List<Web_DatVe.Models.RAP>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Thêm phòng</h2>
    <a href="/Admin/Phong" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post" class="w-50">

    <label>Rạp</label>
    <select name="MaRap" class="form-select mb-2">
        @foreach (var r in rap)
        {
            <option value="@r.MaRap">@r.TenRap</option>
        }
    </select>

    <label>Tên phòng</label>
    <input type="text" name="TenPhong" class="form-control mb-2" required />

    <label>Số lượng ghế</label>
    <input type="number" name="SoLuongGhe" class="form-control mb-3" required />

    <button class="btn btn-danger">Lưu</button>
</form>
