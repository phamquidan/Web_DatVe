@model IEnumerable<Web_DatVe.Models.DONHANG>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý đơn hàng</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="trangThai" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Chờ xử lý" @(Request["trangThai"] == "Chờ xử lý" ? "selected" : "")>Chờ xử lý</option>
                    <option value="Đã xác nhận" @(Request["trangThai"] == "Đã xác nhận" ? "selected" : "")>Đã xác nhận</option>
                    <option value="Đã thanh toán" @(Request["trangThai"] == "Đã thanh toán" ? "selected" : "")>Đã thanh toán</option>
                    <option value="Đã hủy" @(Request["trangThai"] == "Đã hủy" ? "selected" : "")>Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="tuNgay" class="form-control" value="@Request["tuNgay"]" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="denNgay" class="form-control" value="@Request["denNgay"]" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-danger w-100">Lọc</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Phương thức TT</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var dh in Model)
        {
            <tr>
                <td><strong>#@dh.MaDH</strong></td>
                <td>@(dh.NGUOIDUNG?.HoTen ?? "N/A")</td>
                <td>@(dh.NgayDat.HasValue ? dh.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                <td><strong class="text-danger">@string.Format("{0:N0}", dh.TongTien ?? 0) đ</strong></td>
                <td>
                    @{
                        string badgeClass = "bg-secondary";
                        if (dh.TrangThai == "Đã thanh toán") { badgeClass = "bg-success"; }
                        else if (dh.TrangThai == "Đã xác nhận") { badgeClass = "bg-info"; }
                        else if (dh.TrangThai == "Chờ xử lý") { badgeClass = "bg-warning"; }
                        else if (dh.TrangThai == "Đã hủy") { badgeClass = "bg-danger"; }
                    }
                    <span class="badge @badgeClass">@dh.TrangThai</span>
                </td>
                <td>@(dh.PhuongThucThanhToan ?? "N/A")</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Admin/ChiTietDonHang/@dh.MaDH">
                        <i class="bi bi-eye"></i> Chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-inbox"></i> Chưa có đơn hàng nào.
    </div>
}

