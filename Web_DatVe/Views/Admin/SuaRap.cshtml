@model Web_DatVe.Models.RAP

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Sửa rạp</h2>
    <a href="/Admin/Rap" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<form method="post" class="w-50">

    <input type="hidden" name="MaRap" value="@Model.MaRap" />

    <label>Tên rạp</label>
    <input type="text" class="form-control mb-2" name="TenRap" value="@Model.TenRap" />

    <label>Địa chỉ</label>
    <input type="text" class="form-control mb-3" name="DiaChi" value="@Model.DiaChi" />

    <button class="btn btn-danger">Cập nhật</button>
</form>
