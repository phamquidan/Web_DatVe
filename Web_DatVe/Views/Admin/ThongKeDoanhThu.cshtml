@model IEnumerable<Web_DatVe.Models.ViewModels.RevenueStatsVM>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Thống kê doanh thu</h2>
    <a href="/Admin/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="tuNgay" class="form-control" value="@ViewBag.TuNgay" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="denNgay" class="form-control" value="@ViewBag.DenNgay" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-danger w-100">Lọc</button>
            </div>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-muted">Tổng doanh thu</h5>
                <h3 class="text-danger">@string.Format("{0:N0}", ViewBag.TongDoanhThu ?? 0) đ</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-muted">Tổng số đơn</h5>
                <h3>@(ViewBag.TongDon ?? 0)</h3>
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered shadow-sm bg-white">
    <thead class="table-danger">
        <tr>
            <th>Ngày</th>
            <th>Số đơn</th>
            <th>Doanh thu</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Không có dữ liệu trong khoảng thời gian đã chọn.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ngay.ToString("dd/MM/yyyy")</td>
                    <td>@item.SoDon</td>
                    <td>@string.Format("{0:N0}", item.TongTien) đ</td>
                </tr>
            }
        }
    </tbody>
</table>


