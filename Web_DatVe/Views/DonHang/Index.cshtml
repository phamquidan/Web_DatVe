@model IEnumerable<Web_DatVe.Models.DONHANG>
@{
    ViewBag.Title = "Đơn hàng của tôi";
}

<h2 class="mb-3">Đơn hàng của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-bordered shadow-sm bg-white">
        <thead class="table-danger">
            <tr>
                <th>Mã ĐH</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Thanh toán</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.MaDH</td>
                    <td>@(d.NgayDat.HasValue ? d.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                    <td>@string.Format("{0:N0}", d.TongTien) đ</td>
                    <td>@d.PhuongThucThanhToan</td>

                    <td>
                        <a href="/DonHang/ChiTiet/@d.MaDH" class="btn btn-sm btn-danger">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
